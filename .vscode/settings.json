{
	// Отключаем встроенный валидатор VS Code для CSS/SCSS
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	// Включаем автоформатирование Prettier при сохранении
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	// Включаем автоисправление Stylelint при сохранении
	"editor.codeActionsOnSave": {
		"source.fixAll.stylelint": "explicit"
	},

	// Указываем, для каких файлов применять Stylelint
	"stylelint.validate": ["css", "scss", "postcss", "vue"],

	// Если используете ESLint + Prettier
	"eslint.validate": ["javascript", "typescript", "vue"],
	"eslint.codeAction.showDocumentation": {
		"enable": true
	},
	"prettier.enable": true,
	"eslint.useFlatConfig": true
}
